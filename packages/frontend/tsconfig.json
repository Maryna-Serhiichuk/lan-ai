{
  "compilerOptions": {
    "module": "esnext",
    "sourceMap": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // TODO: true
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    // "paths": {
    //   "@graphql": ["./src/graphql"]
    // },
    "jsx": "preserve",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spac.ts"]
}